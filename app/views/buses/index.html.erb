<section class="content">
 
<p id="notice"><%= notice %></p>
<div class="box">
<div class="box-header with-border">
<h3 class="box-title">Buses</h3>
</div>
<!-- /.box-header -->
<div class="box-body">
<table class="table table-bordered">
 <thead>
   <tr>
     <th>Balanço de Potência</th>
     <th>Perda de Enlace</th>
     <th>Balanço de Dispersão</th>     
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @buses.each do |bus| %>
     <tr>
       <td><%= bus.power_balance %></td>
       <td><%= bus.link_losses %></td>
       <td><%= bus.dispersion_balance %></td>
       <td><%= link_to 'Show', bus %></td>
       <td><%= link_to 'Edit', edit_bus_path(bus) %></td>
       <td><%= link_to 'Destroy', bus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
   <% end %>
 </tbody>
</table>
 
</div>
</div>
 
<br>
 
<a class="btn btn-primary" style="color: white;" href="/buses/new">New Bus</a>
 
 </section>
